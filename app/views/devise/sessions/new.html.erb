
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="uk-section uk-section-muted uk-flex uk-flex-middle uk-animation-fade" uk-height-viewport>
  <div class="uk-width-1-1">
    <div class="uk-container">
      <div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid>
        <div class="uk-width-1-1@m">
          <div class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
            <div class="uk-text-center">
              <%= image_tag 'logo.png', class: 'uk-width-4-5' %>          
            </div>
            <form>
              <% if notice != nil then %>
              <div class="uk-alert-success" uk-alert>
                <a class="uk-alert-close" uk-close></a>
                <p><%= notice %></p>
              </div>
              <% end %>
              <% if alert != nil then %>
              <div class="uk-alert-danger" uk-alert>
                <a class="uk-alert-close" uk-close></a>
                <p><%= alert %></p>
              </div>
              <% end %>
              <div class="uk-margin">
                <div class="uk-inline uk-width-1-1 field">
                  <span class="uk-form-icon" uk-icon="icon: mail"></span>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input uk-form-large", placeholder: "sample@co.jp", value:"default1@sample.com" %>
                </div>
              </div>
              <div class="uk-margin">
                <div class="uk-inline uk-width-1-1 field">
                  <span class="uk-form-icon" uk-icon="icon: lock"></span>
                  <%= f.password_field :password, autocomplete: "current-password", class: "uk-input uk-form-large", placeholder: "**********", value:"niodah89g2" %>
                </div>
              </div>
              <div class="uk-margin actions">
                <%= f.submit "ログイン", class: "uk-button uk-button-primary uk-button-large uk-width-1-1" %>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
